<Window x:Class="Leagueinator.GUI.Dialogs.TextViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leagueinator.GUI.Dialogs"
        mc:Ignorable="d"
        Title="TextViewer" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Save" Click="Hnd_Save"/>
            <MenuItem Header="Print" Click="Hnd_Print"/>
        </Menu>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="MainTextBlock" FontFamily="Cascadia Mono SemiBold" FontSize="14" 
                 TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
    </DockPanel>
</Window>
