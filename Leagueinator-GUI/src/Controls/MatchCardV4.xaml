<local:MatchCard 
    x:Class="Leagueinator.GUI.Controls.MatchCardV4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Leagueinator.GUI.Controls"
    mc:Ignorable="d" 
    KeyboardNavigation.TabNavigation="Cycle"
>

    <Border BorderBrush="Black" BorderThickness="2" Margin="5">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="1 vs 1" Click="HndChangeFormat" Tag="VS1"/>
                <MenuItem Header="2 vs 2" Click="HndChangeFormat" Tag="VS2"/>
                <MenuItem Header="3 vs 3" Click="HndChangeFormat" Tag="VS3"/>
                <MenuItem Header="4 vs 4" Click="HndChangeFormat" Tag="VS4"/>
                <MenuItem Header="4321" Click="HndChangeFormat" Tag="A4321"/>
                <MenuItem Header="Remove Match" Click="HndRemoveMatch" Tag=""/>
            </ContextMenu>
        </Border.ContextMenu>

        <!-- Whole Card Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Team 1 Card -->
            <local:TeamCard 
                Style="{StaticResource HoverBorderStyle}"
                x:Name="TeamCard0" TeamIndex="0"
                BorderBrush="Black" BorderThickness="0 0 1 0" Grid.Column="0">
                    
                <!-- Team Container -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!-- Player Containers -->
                    <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="10 10 0 10">
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="1"/>
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="2"/>
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="3"/>
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="4"/>
                    </StackPanel>

                    <!-- Team 1 Bowls  -->
                    <StackPanel VerticalAlignment="Center" Grid.Column="1" Margin="10">
                        <TextBlock HorizontalAlignment="Center" Text="Tie" FontFamily="Arial Black" FontSize="10" Margin="0,0,0,3"/>
                        <CheckBox x:Name="CheckTie0" Tag="CheckTie" IsChecked="false"
                                  Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                  RenderTransformOrigin="0.548,-0.431"  
                                  Unchecked="HndTieValueChanged" Checked="HndTieValueChanged"/>
                        <TextBox x:Name="TxtBowls0" Tag="Bowls"
                                 Padding="2" Width="30" 
                                 PreviewTextInput="OnlyNumbers"
                                 Text="{Binding Bowls, RelativeSource={RelativeSource AncestorType=local:TeamCard}}"
                                 TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"                                 
                                 KeyDown="TxtEnterPressedHnd"
                                 TabIndex="9"/>
                        <TextBlock HorizontalAlignment="Center" Text="Bowls" FontFamily="Arial Black" FontSize="10" Margin="0,3,0,0"/>
                    </StackPanel>
                </Grid>
            </local:TeamCard>

            <!-- Match Info Box -->
            <local:InfoCard x:Name="InfoCard" Grid.Column="1" Style="{StaticResource HoverUserStyle}"/>

            <!-- Team 2 Card -->
            <local:TeamCard 
                Style="{StaticResource HoverBorderStyle}"
                x:Name="TeamCard1" TeamIndex="1"
                BorderBrush="Black" BorderThickness="1 0 0 0" Grid.Column="4"                  
>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Team 2 Bowls -->
                    <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="10">
                        <TextBlock HorizontalAlignment="Center" Text="Tie" FontFamily="Arial Black" FontSize="10" Margin="0,0,0,3"/>
                        <CheckBox x:Name="CheckTie1" Tag="CheckTie" IsChecked="false" 
                                  Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                  RenderTransformOrigin="0.548,-0.431"  
                                  Unchecked="HndTieValueChanged" Checked="HndTieValueChanged"/>
                        <TextBox x:Name="TxtBowls1" Tag="Bowls"                                 
                                 Padding="2" Width="30" 
                                 PreviewTextInput="OnlyNumbers"
                                 Text="{Binding Bowls, RelativeSource={RelativeSource AncestorType=local:TeamCard}}"
                                 TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"                                 
                                 KeyDown="TxtEnterPressedHnd"
                                 TabIndex="10"/>
                        <TextBlock HorizontalAlignment="Center" Text="Bowls" Margin="0,3,0,0" FontFamily="Arial Black" FontSize="10"/>
                    </StackPanel>

                    <!-- Player Container -->
                    <StackPanel 
                         VerticalAlignment="Center" Grid.Column="1" Margin="0 10 10 10"
                    >
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="5"/>
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="6"/>
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="7"/>
                        <local:MemoryTextBox Tag="PlayerName"  Padding="2" MinWidth="130" TabIndex="8"/>
                    </StackPanel>
                </Grid>
            </local:TeamCard>
        </Grid>
    </Border>
</local:MatchCard>
