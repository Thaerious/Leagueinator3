<UserControl x:Class="Leagueinator.GUI.Controls.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leagueinator.GUI.Controls"
             xmlns:diagnostics="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="154.666">

    <!-- Lane Information -->
    <Border BorderBrush="DarkGreen" Width="100">
        <StackPanel>
            <!-- Lane -->
            <TextBlock x:Name="LblLane" Text="{Binding Lane}"
                   FontFamily="Arial Black" FontSize="20"
                   HorizontalAlignment="Center" Margin="0,10,0,10"/>

            <!-- Ends -->
            <TextBox x:Name="TxtEnds" Text="10"
                     PreviewTextInput="OnlyNumbers"
                     Padding="2" Width="30" TextAlignment="Center" FontSize="14" IsTabStop="False"/>

            <TextBlock 
                   Text="Ends" 
                   HorizontalAlignment="Center"  Margin="0,5,0,10" 
                   FontFamily="Arial Black"/>
            
        </StackPanel>
    </Border>
</UserControl>
