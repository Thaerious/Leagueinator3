<UserControl x:Class="Leagueinator.GUI.Controls.BowlsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leagueinator.GUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel VerticalAlignment="Center" Margin="10">
        <TextBlock HorizontalAlignment="Center" Text="Tie" FontFamily="Arial Black" FontSize="10" Margin="0,0,0,3"/>
        <CheckBox Name="CheckTie" Tag="CheckTie" IsChecked="false" 
            Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" 
            RenderTransformOrigin="0.548,-0.431"                
            IsTabStop="False"/>
        <TextBox Name="Bowls" Tag="Bowls"
            Padding="2" Width="30"             
            Text="0"
            TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"                                 
            IsTabStop="False"/>
        <TextBlock Text="Bowls" HorizontalAlignment="Center" 
            Margin="0,3,0,0" FontFamily="Arial Black" FontSize="10"
            Focusable="False"/>
    </StackPanel>

</UserControl>
