<Window x:Class="Leagueinator.GUI.Forms.Results.ResultsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leagueinator.GUI.Forms.Results"
        mc:Ignorable="d"
        Title="Window1" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Print" Click="Hnd_Print"/>
            <MenuItem Header="Exit" Click="Hnd_Exit"/>
        </Menu>
        
        <!-- Outermost container pane -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left-hand event selector -->
            <StackPanel x:Name="EventSelector" Grid.Column="0">

            </StackPanel>
            <!-- Right-hand text pane -->
            <FlowDocumentScrollViewer  x:Name="ScrollViewer" Grid.Column="1">
                <FlowDocument x:Name="DocViewer" PagePadding="50" ColumnWidth="9999" FontFamily="Arial">
                    <Section x:Name="TeamSection">
                        <!-- Dynamically add blocks here -->
                    </Section>
                </FlowDocument>
            </FlowDocumentScrollViewer>
        </Grid>
    </DockPanel>
</Window>
