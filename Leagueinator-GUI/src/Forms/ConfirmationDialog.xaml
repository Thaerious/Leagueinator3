<Window x:Class="Leagueinator.GUI.Forms.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="150" Width="452">
    <StackPanel>
        <TextBlock Name="DisplayText" Text="" Margin="10" HorizontalAlignment="Center" FontSize="20" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="YesButton" Content="Yes" Width="75" Margin="10" Click="YesButton_Click"/>
            <Button Name="NoButton" Content="No" Width="75" Margin="10" Click="NoButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>