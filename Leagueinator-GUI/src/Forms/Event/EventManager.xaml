<Window x:Class="Leagueinator.GUI.Forms.Event.EventManagerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leagueinator.GUI.Forms.Event"
        mc:Ignorable="d"
        Title="Event Manager" 
        Height="450" Width="800"
        MinWidth="600" MinHeight="300"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="61" />
        </Grid.RowDefinitions>

        <!-- Top Pane -->
        <Border Grid.Row="0" Background="LightGray" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" MinWidth="250"/>
                    <ColumnDefinition Width="5" />
                    <!-- Splitter -->
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <!-- Settings -->
                <Border Grid.Column="0" Background="LightGray">
                    <StackPanel Margin="0">

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Grid.Column="0" Grid.Row="0" Content="Available Lanes" VerticalAlignment="Center" Margin="0" Width="100"/>
                            <TextBox x:Name="TxtLanes" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="0" Width="125"/>
                        </StackPanel>

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Grid.Column="0" Grid.Row="1" Content="Default Ends" VerticalAlignment="Center" Margin="0" Width="100"/>
                            <TextBox x:Name="TxtEnds" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="0" Width="125"/>
                        </StackPanel>

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Grid.Column="0" Grid.Row="1" Content="Event Type" VerticalAlignment="Center" Margin="0" Width="100"/>
                            <ComboBox x:Name="ListEventType" SelectedIndex="0" Width="125">
                                <ComboBoxItem>Ranked Ladder</ComboBoxItem>
                                <ComboBoxItem>Round Robin</ComboBoxItem>
                                <ComboBoxItem>Motley</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Grid.Column="0" Grid.Row="1" Content="Match Format" VerticalAlignment="Center" Margin="0" Width="100"/>
                            <ComboBox x:Name="ListMatchFormat" SelectedIndex="1" Width="125">
                                <ComboBoxItem >1 vs 1</ComboBoxItem>
                                <ComboBoxItem>2 vs 2</ComboBoxItem>
                                <ComboBoxItem>3 vs 3</ComboBoxItem>
                                <ComboBoxItem>4 vs 4</ComboBoxItem>
                                <ComboBoxItem>4321</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" Background="DarkGray" />

                <!-- List of events (datagrid) -->
                <Border Grid.Column="2" Background="LightBlue">
                    <DataGrid Name="EventData" GridLinesVisibility="None" AutoGenerateColumns="False" 
                              SelectionMode="Single" SelectionUnit="FullRow"
                               SelectionChanged="SelectionChanged"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="150" Header="Name" Binding="{Binding Name}" />
                            <DataGridTextColumn Width="150" Header="Date Created" Binding="{Binding Date}" IsReadOnly="True" />
                            <DataGridTextColumn Width="75" Header="# Rounds" Binding="{Binding Rounds}" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>

        <!-- Bottom Pane -->
        <Border Grid.Row="1" Background="LightGray">
            <StackPanel Orientation="Vertical" Margin="5">
                <!-- Name Field -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Name:" VerticalAlignment="Center" />
                    <TextBox x:Name="TxtEventName" Grid.Column="1" Margin="5 0 0 0" />
                </Grid>
                
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button x:Name="ButNew" Width="75" Margin="0 0 5 0" Content="New"/>
                    <Button x:Name="ButDelete" Width="75" Margin="0 0 5 0" Content="Delete"/>
                    <Button x:Name="ButSelect" Width="75" Margin="0 0 5 0" Content="Select"/>
                    <Button x:Name="ButExit" Width="75" Content="Exit"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Window>
