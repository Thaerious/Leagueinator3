<UserControl x:Class="Leagueinator.GUI.Forms.Print.TeamBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <Border BorderBrush="Black" BorderThickness="1" Padding="10" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Names" FontWeight="Bold"/>
                <TextBlock Text="Player 1" />
                <TextBlock Text="Player 2" />
                <TextBlock Text="Player 3" />
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>                        
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="R" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="PF" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="PA" FontWeight="Bold"/>                    
                    <TextBlock Grid.Column="3" Text="TB" FontWeight="Bold"/>
                    <TextBlock Grid.Column="4" Text="E" FontWeight="Bold"/>
                    <TextBlock Grid.Column="5" Text="L" FontWeight="Bold"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
