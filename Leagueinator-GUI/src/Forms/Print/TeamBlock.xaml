<UserControl x:Class="Leagueinator.GUI.Forms.Print.TeamBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <Border BorderBrush="Black" BorderThickness="1" Padding="10" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="PlayerNames">
                <TextBlock Text="Names" FontWeight="Bold"/>
            </StackPanel>

            <Grid Grid.Column="1">
                <StackPanel x:Name="Results" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Width="50" Text="R" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Width="50" Text="F" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Width="50" Text="A" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Width="50" Text="T" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Width="50" Text="E" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Width="50" Text="L" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
