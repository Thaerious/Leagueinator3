<Application x:Class="Leagueinator.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Leagueinator.GUI"
             ShutdownMode="OnMainWindowClose"
             StartupUri="src/Forms/Main/MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="HoverUserStyle" TargetType="UserControl">
            <Setter Property="Background" Value="Green"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#292"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HoverBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="Green"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#292"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HoverGridStyle" TargetType="Grid">
            <Setter Property="Background" Value="Green"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#292"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
